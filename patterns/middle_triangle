#middle triangle using star

n=int(input("enter the rowa : "))
for i in range(1,n+1): 
    print(" "*(n-i),"*"*i,end=" ")
    print()  

#middle triangle using numbers


n=int(input("enter the rowa : "))
for i in range(1,n+1): 
    print(" "*(n-i),"*"*i,end=" ")
    for j in range(1,i+1):
       print(j,end=" ")
    print()   
 
