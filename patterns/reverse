#reverse triangle using stars

n=int(input("enter the rowa : "))
for i in range(1,n+1):
    for j in range(1,n+2-i):
        print(j,end=" ")
    print()   

#reverse triangle with numbers


n=int(input("enter the rowa : "))
for i in range(1,n+1):
    for j in range(1,n+2-i):
        print(n+1-j,end=" ")
    print()   

