#single level inheritance for phone class:

class phone:
    def __init__(self,name,model):
        self.p_name=name
        self.p_model=model

    def display(self):
        print("enter the name of phone is ",self.p_name)
        print("enter the model of the phone is ",self.p_model)

class phone2(phone):
    def __init__(self,name,model,price):
        super().__init__(name,model)
        self.p_price=price

    def display(self):
        super().display()
        print("enter the price of the phone is ",self.p_price)        


p2=phone2("vivo","v23 pro",50000)
p2.display()

